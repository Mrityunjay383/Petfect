<%- include("../partials/adminHeader") -%>

<section class="con authCon boxShadow">
    <h2>Register</h2>
    <p class="declareS">*We ensure that you data is secured and is in good hands</p>


    <!-- Makes POST request to /register route -->
    <form action="/auth/register" method="POST">

      <div class="form-group">
        <label for="name">Full Name</label>
        <input type="text" class="form-control" name="name" required>
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input id="username" type="email" class="form-control" name="username">
      </div>

      <div class="form-group">
        <label for="pNumber">WhatsApp Number</label>
        <input type="tel" class="form-control" name="pNumber" required>
      </div>
      <div class="form-group">
        <label for="">Address</label>
        <input type="text" class="form-control" name="addLine1" placeholder="Address Line 1" required>
        <input type="text" class="form-control" name="addLine2" placeholder="Address Line 2">
        <input type="text" class="form-control" name="city" placeholder="City / Town" required>
        <input type="text" class="form-control" name="state" placeholder="State" required>
        <input type="number" class="form-control" name="postalCode" placeholder="Postal Code" required>
      </div>

      <div class="form-group">
        <label for="password">New Password</label>
        <input type="password" class="form-control" name="password">
      </div>

      <div class="form-group">
        <label for="otp">OTP:</label>
        <button id="otpBtn" class="otpBtn" type="button" name="button">Send OTP</button>
        <input id="otp" type="number" name="otp" class="form-control" placeholder="Enter OTP" required>
      </div>

      <button id="regBtn" type="submit" class="btn btn-dark">Register</button>
    </form>

    <p class="changeAuth">Already have an account, <a href="/auth/login">Log In</a></p>
    <img class="authImg" src="/images/dogWalking.svg" alt="Dog Walking">

</section>


